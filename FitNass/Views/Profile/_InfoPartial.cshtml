
@using Microsoft.AspNetCore.Identity
@using FitNass.Areas.Identity.Data
@using Microsoft.EntityFrameworkCore;

@inject SignInManager<FitNassUser> SignInManager
@inject UserManager<FitNassUser> UserManager
@model string

@{
    var targetUser = await UserManager.Users.FirstOrDefaultAsync(m => m.Link == Model);
}

<div class="card">
    <div class="card-body">

        <div class="mb-2">
            @{

                if (targetUser.Sex == "Female")
                {
                    <img src="~/images/Blank-DP-Female.jpg" class="rounded-circle" alt="User" width="160" height="160" />
                }
                else if (targetUser.Sex == "Male")
                {
                    <img src="~/images/Blank-DP-Male.jpg" class="rounded-circle" alt="User" width="160" height="160" />
                }
                else
                {
                    <img src="~/images/Blank-DP-Female.jpg" class="rounded-circle" alt="User" width="160" height="160" />
                }
            }
        </div>

        <h5 class="card-title">@targetUser.FirstName @targetUser.LastName</h5>
        <span class="card-text">@targetUser.DOB.ToString("m") -- @targetUser.Sex</span>
        <div>Link: @Model</div>
    </div>
</div>